{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "typeRoots": [
      "src/custom.d.ts"
    ]
  },
  "include": [
    "./src/index.tsx",
    "src/components",
    "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}